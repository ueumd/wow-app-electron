{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/renderer/src/**/*.ts",
    "src/renderer/src/**/*.vue",
    "src/preload/*.d.ts",
    "src/types/*.d.ts",
    "package.json",
    "scripts/**/*"
  ],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@renderer/*": [
        "src/renderer/src/*"
      ]
    }
  },
  "references": [{ "path": "./tsconfig.node.json" }]
}
